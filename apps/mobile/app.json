{
  "expo": {
    "name": "VoiceFit",
    "slug": "voicefit",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "voicefit",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.voicefit.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "VoiceFit needs microphone access to log your workouts by voice.",
        "NSLocationWhenInUseUsageDescription": "VoiceFit needs location access to track your runs.",
        "NSLocationAlwaysUsageDescription": "VoiceFit needs location access to track your runs in the background."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.voicefit.app",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow VoiceFit to track your runs."
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow VoiceFit to access your microphone for voice logging."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
